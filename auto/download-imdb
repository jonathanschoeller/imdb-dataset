#!/bin/bash -e

download_folder="imdb-downloads"

files=( 
    "name.basics.tsv.gz" 
    "title.akas.tsv.gz" 
    "title.basics.tsv.gz" 
    "title.crew.tsv.gz"
    "title.episode.tsv.gz"
    "title.principals.tsv.gz"
    "title.ratings.tsv.gz"
)

mkdir -p $download_folder

for file in "${files[@]}"
do
    : 
    if ! [ -f $download_folder/$file ]
    then
        echo "Downloading $file"
        curl $IMDB_DATASET_URL/$file --progress-bar --output imdb-downloads/$file
    else
        echo "Skipping $file download. Already exists."
    fi

    echo "Uncompressing $file."
    dest=${file%.gz}
    pv $download_folder/$file | gunzip > $download_folder/$dest 
done
